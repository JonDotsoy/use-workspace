{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "target": "ES2016",
    "module": "CommonJS",
    "sourceRoot": "./src/`",
    "inlineSourceMap": true
  },
  "exclude": [
    "./lib",
    "**/*.spec.ts",
    "**/__examples__/**",
    "**/__scripts__/**"
  ]
}
