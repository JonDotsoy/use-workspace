  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "allowImportingTsExtensions": false,
    "sourceRoot": "./src/",
    "inlineSourceMap": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "./lib",
    "**/*.spec.ts",
    "**/__examples__/**",
    "**/__scripts__/**"
  ]
}
